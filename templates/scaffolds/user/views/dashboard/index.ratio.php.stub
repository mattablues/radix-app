              <a href="{{ route('contact.index') }}" class="text-xs font-bold text-blue-600 hover:text-blue-800 transition-colors uppercase tracking-widest">G친 till support &rarr;</a>
            </div>
          {% endif %}
        </div>
      </div>
    </section>
{% endblock %}
