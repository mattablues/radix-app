                    <th class="px-6 py-3 text-[10px] font-bold text-gray-400 uppercase">Tidst칛mpel</th>
                    <th class="px-6 py-3 text-[10px] font-bold text-gray-400 uppercase">H칛ndelse</th>
                    <th class="px-6 py-3 text-[10px] font-bold text-gray-400 uppercase text-right">Status</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                  {% foreach($latestEvents as $event) : %}
                  <tr class="group hover:bg-blue-50/30 transition-colors">
                    <td class="px-6 py-4 text-xs text-slate-500 whitespace-nowrap">
                      {{ $event->created_at }}
                    </td>
                    <td class="px-6 py-4">
                      <div class="flex flex-col">
                        <span class="text-sm font-semibold text-slate-900 group-hover:text-blue-600 transition-colors line-clamp-1">
                          {{ $event->message }}
                        </span>

                        {% $eventUser = $event->getRelation('user'); %}
                        {% if (!$eventUser instanceof \App\Models\User && method_exists($event, 'user')) : %}
                          {{ $eventUser = $event->user()->get() }}
                        {% endif; %}
                        {% if($eventUser instanceof \App\Models\User) : %}
                          <span class="text-[10px] text-gray-400 font-medium italic">utf칬rt av {{ $eventUser->first_name }}</span>
