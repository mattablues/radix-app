{% extends "layouts/app.ratio.php" %}
{% block title %}Dashboard | Radix Control{% endblock %}
{% block pageId %}dashboard{% endblock %}
{% block searchId %}search-users{% endblock %}
{% block body %}
    <section>
      <!-- V칛lkomsth칛lsning -->
