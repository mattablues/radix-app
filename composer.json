{
    "name": "mats/radix",
    "description": "Radix System",
    "license": "MIT",
    "authors": [
        {
            "name": "Mats Ã…kebrand",
            "email": "malle@akebrands.se"
        }
    ],
    "scripts": {
        "stan": "phpstan analyse -c phpstan.neon.dist",
        "test": "php -d xdebug.mode=off vendor/bin/phpunit",
        "test:cov": "php -d xdebug.mode=coverage vendor/bin/phpunit --coverage-text",
        "format": "php-cs-fixer fix",
        "format:check": "php-cs-fixer fix --dry-run --diff",
        "infect": "php -d xdebug.mode=coverage vendor/bin/infection --configuration=infection.json.dist --threads=4 --min-msi=90 --min-covered-msi=95",
        "infect:cov": "php -d xdebug.mode=coverage vendor/bin/infection --configuration=infection.json.dist --threads=4 --min-msi=90 --min-covered-msi=95 --skip-initial-tests --coverage=build/coverage"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:mattablues/radix-framework.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src"
        },
        "files": [
            "support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Radix\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "symfony/var-dumper": "v7.4.4",
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.1",
        "infection/infection": "^0.32",
        "friendsofphp/php-cs-fixer": "v3.93.1"
    },
    "require": {
        "php": "^8.3",
        "radix/framework": "dev-main",
        "ext-pdo": "*",
        "phpmailer/phpmailer": "v6.12.0",
        "ext-gd": "*",
        "ext-exif": "*",
        "ext-ctype": "*",
        "ext-openssl": "*",
        "ext-fileinfo": "*",
        "ext-iconv": "*",
        "ext-simplexml": "*",
        "ext-libxml": "*"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}