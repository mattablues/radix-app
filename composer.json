{
    "name": "mattablues/radix-app",
    "description": "Radix System",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Mats Åkebrand",
            "email": "malle@akebrands.se"
        }
    ],
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"echo PHP_EOL.'Skapade .env från .env.example (om den saknades).'.PHP_EOL.'Nästa steg: fyll i .env och kör: php radix app:setup'.PHP_EOL;\""
        ],
        "stan": "php tools/phpstan.php",
        "stan:minimal": "phpstan analyse -c phpstan.minimal.neon",
        "test": "php -d xdebug.mode=off vendor/bin/phpunit",
        "infect": "php tools/infection.php",
        "infect:pcov": "php tools/infection.php pcov",
        "infect:xdebug": "php tools/infection.php xdebug",
        "format": "php-cs-fixer fix",
        "format:check": "php-cs-fixer fix --dry-run --diff"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src"
        },
        "files": [
            "support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Radix\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "symfony/var-dumper": "v7.4.4",
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.1",
        "infection/infection": "^0.32",
        "friendsofphp/php-cs-fixer": "v3.93.1",
        "symfony/event-dispatcher": "^7.4",
        "symfony/filesystem": "^7.4",
        "symfony/finder": "^7.4",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "require": {
        "php": "^8.3",
        "mattablues/radix-framework": "^1.0.0",
        "ext-pdo": "*",
        "phpmailer/phpmailer": "v6.12.0",
        "ext-gd": "*",
        "ext-exif": "*",
        "ext-ctype": "*",
        "ext-openssl": "*",
        "ext-fileinfo": "*",
        "ext-iconv": "*",
        "ext-simplexml": "*",
        "ext-libxml": "*"
    },
    "config": {
        "platform": {
            "php": "8.3.30"
        },
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
