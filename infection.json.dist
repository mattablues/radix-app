{
  "$schema": "https://raw.githubusercontent.com/infection/infection/0.29.8/resources/schema.json",
  "source": {
    "directories": ["src"],
    "excludes": ["config", "routes", "resources", "database", "tests", "vendor"]
  },
  "logs": {
    "text": "php://stdout",
    "html": "infection-report.html"
  },
  "timeout": 25,
  "mutators": {
    "@default": true,

    "NotIdentical": {
      "ignore": [
        "App\\Middlewares\\RequestLogger::process"
      ]
    },
    "LessThan": {
      "ignore": [
        "App\\Middlewares\\RequestLogger::process"
      ]
    }
  },
  "testFramework": "phpunit",
  "bootstrap": "./vendor/autoload.php",
  "phpUnit": {
    "configDir": "."
  }
}